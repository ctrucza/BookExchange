@using poc.Models
@model String

@{
    ViewBag.Title = "Books shared by " + @Model;
}

<div class="well">
    <p>These are all the books shared by @Model.</p>
    <p>Thanks for sharing.</p>
    <a class="btn btn-primary" href="@Url.Action("GiveAway")">Give away a book now!</a>
</div>

@Html.Partial("BookList", BookRepository.GetUsersBooks(@Model));

@{
    ViewBag.Title = "Home Page";
}

<div class="row">
    <div class="col-md-6">
        <h2>Search</h2>

        @using (Html.BeginForm("Search", "Home"))
        {
            @User.Identity.Name
            @Html.AntiForgeryToken()
            <div class="form-horizontal">

                <div class="form-group">
                    <div class="col-md-10">
                        <input class="form-control" id="Search" name="SearchTerm" type="text" placeholder="Author or title" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-10">
                        <input type="submit" value="Search" class="btn btn-primary" />
                    </div>
                </div>
            </div>
        }
    </div>


    <div class="col-md-6">
        <h2>Give away a book</h2>

        @using (Html.BeginForm("AddBook", "Home"))
        {
            @Html.AntiForgeryToken()
            <div class="form-horizontal">

                <div class="form-group">
                    <div class="form-inline col-md-2">Author</div>
                    <div class="col-md-10">
                        <input class="form-control" id="Author" name="Author" type="text" placeholder="Author" autofocus required />
                    </div>
                </div>

                <div class="form-group">
                    <div class="form-inline col-md-2">Title</div>
                    <div class="col-md-10">
                        <input class="form-control" id="Title" name="Title" placeholder="Title" type="text" />
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Give it away!" class="btn btn-primary" />
                    </div>
                </div>
            </div>
        }
    </div>
</div>

